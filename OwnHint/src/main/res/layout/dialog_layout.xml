<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="0dp"
    tools:layout_marginLeft="60dp"
    tools:layout_marginRight="60dp">

    <TextView
        android:id="@+id/universalDialog_btv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/universalDialog_btv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp"
        android:textColor="#FF333333"
        android:textSize="12sp"
        tools:text="模拟文本模拟" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#FF333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/universalDialog_btv_leftButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FF888888"
            android:textSize="15sp"
            tools:text="取消" />

        <View
            android:id="@+id/universalDialog_v_buttonDivider"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#FF333333" />

        <TextView
            android:id="@+id/universalDialog_btv_rightButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FF333333"
            android:textSize="15sp"
            tools:text="确定" />
    </LinearLayout>
</LinearLayout>